#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules/detect-port-alt/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules/detect-port-alt/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules:/mnt/c/_Work/foodgram-project-react/node_modules:/mnt/c/_Work/node_modules:/mnt/c/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules/detect-port-alt/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules/detect-port-alt/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/detect-port-alt@1.1.6/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules:/mnt/c/_Work/foodgram-project-react/node_modules:/mnt/c/_Work/node_modules:/mnt/c/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/detect-port" "$@"
else
  exec node  "$basedir/../../bin/detect-port" "$@"
fi
