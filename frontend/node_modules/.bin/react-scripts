#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules/react-scripts/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules/react-scripts/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules:/mnt/c/_Work/foodgram-project-react/node_modules:/mnt/c/_Work/node_modules:/mnt/c/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/react-scripts/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/react-scripts/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules/react-scripts/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules/react-scripts/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/react-scripts@4.0.2_react@17.0.2/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/.pnpm/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules:/mnt/c/_Work/foodgram-project-react/node_modules:/mnt/c/_Work/node_modules:/mnt/c/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/react-scripts/bin/node_modules:/mnt/c/_Work/foodgram-project-react/frontend/node_modules/react-scripts/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../react-scripts/bin/react-scripts.js" "$@"
else
  exec node  "$basedir/../react-scripts/bin/react-scripts.js" "$@"
fi
